---
/**
 * Product Card Component
 * Clean, professional ecommerce-style product card
 * Inspired by Chaide.com: subtle shadows, clean typography, clear pricing
 */
import { BRAND } from '../../lib/config/brand';
import type { Product } from '../../lib/data/types';
import ProductImage from '../common/ProductImage.astro';

interface Props {
  product: Product;
  priority?: boolean;
}

const { product, priority = false } = Astro.props;

// Get the minimum price from options
const minPrice = Math.min(...product.options.map(o => o.price));
const maxPrice = Math.max(...product.options.map(o => o.price));
const hasMultiplePrices = minPrice !== maxPrice;
---

<article class="product-card group bg-white rounded-2xl overflow-hidden transition-all duration-300 hover:shadow-xl border border-gray-100 hover:border-primary-blue/20">
  <a href={`/producto/${product.slug}`} class="block h-full">
    <!-- Image Container -->
    <div class="relative overflow-hidden bg-gradient-to-b from-gray-50 to-white">
      <ProductImage
        src={product.imageUrl}
        alt={product.name}
        aspectRatio="4/3"
        objectFit="contain"
        priority={priority}
        sizes="(max-width: 640px) 100vw, (max-width: 768px) 50vw, (max-width: 1024px) 33vw, 25vw"
        class="group-hover:scale-105 transition-transform duration-500"
      />
      
      <!-- Hover overlay with quick action hint -->
      <div class="absolute inset-0 bg-primary-navy/0 group-hover:bg-primary-navy/5 transition-colors duration-300 flex items-center justify-center">
        <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 bg-primary-blue text-white text-sm font-semibold px-4 py-2 rounded-full">
          Ver detalles
        </span>
      </div>
    </div>

    <!-- Content -->
    <div class="p-5">
      <!-- Product Name -->
      <h3 class="text-base sm:text-lg font-semibold text-dark-slate group-hover:text-primary-blue transition-colors mb-3 line-clamp-2 min-h-[2.75rem] sm:min-h-[3.25rem]">
        {product.name}
      </h3>
      
      <!-- Price Section -->
      <div class="mb-3">
        <div class="flex flex-wrap items-baseline gap-1.5">
          {hasMultiplePrices && (
            <span class="text-xs text-muted-slate font-medium">Desde</span>
          )}
          <span class="text-xl sm:text-2xl font-bold text-primary-blue">
            {BRAND.texts.currency}{minPrice.toFixed(2)}
          </span>
        </div>
        {hasMultiplePrices && (
          <p class="text-xs text-muted-slate mt-1">
            Hasta {BRAND.texts.currency}{maxPrice.toFixed(2)}
          </p>
        )}
      </div>

      <!-- Shipping Badge -->
      <div class="flex items-center gap-1.5 text-xs text-green-600 bg-green-50 px-3 py-1.5 rounded-full w-fit">
        <svg class="w-3.5 h-3.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span class="font-medium">Env√≠o gratis</span>
      </div>
    </div>
  </a>
</article>

<style>
  .product-card {
    display: flex;
    flex-direction: column;
  }
  
  .product-card a {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .product-card > a > div:last-child {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
