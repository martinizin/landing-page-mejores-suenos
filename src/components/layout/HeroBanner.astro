---
/**
 * Hero Banner Component
 * Professional ecommerce-style banner
 * 
 * Variants:
 * - hero: Full homepage hero with CTAs
 * - category: Category page banner with title only
 */
import Button from '../common/Button.astro';

interface Props {
  variant?: 'hero' | 'category';
  title: string;
  subtitle?: string;
  imageUrl?: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
}

const { 
  variant = 'category',
  title, 
  subtitle,
  imageUrl,
  primaryCta,
  secondaryCta,
} = Astro.props;

const isHero = variant === 'hero';
const isCategory = variant === 'category';
---

<section 
  class:list={[
    'hero-banner relative w-full overflow-hidden',
    isHero ? 'h-[400px] sm:h-[480px] md:h-[560px] lg:h-[620px]' : 'h-[160px] sm:h-[200px] md:h-[260px] lg:h-[300px]'
  ]}
>
  <!-- Background Image -->
  {imageUrl && (
    <img 
      src={imageUrl} 
      alt="" 
      class="absolute inset-0 w-full h-full object-cover object-center"
      loading="eager"
      aria-hidden="true"
    />
  )}
  
  <!-- Gradient Overlay - More sophisticated gradient -->
  <div class:list={[
    'absolute inset-0',
    isHero 
      ? 'bg-gradient-to-r from-primary-navy/95 via-primary-navy/80 to-primary-blue/60' 
      : 'bg-gradient-to-r from-primary-navy/90 to-primary-blue/75'
  ]}></div>
  
  <!-- Content -->
  <div class="relative z-10 h-full flex items-center">
    <div class="container mx-auto px-4">
      {isCategory ? (
        <!-- Category Banner: Centered title with elegant typography -->
        <div class="text-center">
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white uppercase tracking-[0.1em] md:tracking-[0.15em]">
            {title}
          </h1>
          {subtitle && (
            <p class="mt-4 text-lg md:text-xl text-white/80 max-w-2xl mx-auto">
              {subtitle}
            </p>
          )}
        </div>
      ) : (
        <!-- Hero Banner: Left-aligned content with CTAs -->
        <div class="max-w-2xl">
          <span class="inline-block bg-accent-cyan/20 text-accent-cyan text-sm font-semibold px-4 py-1.5 rounded-full mb-4 md:mb-6">
            Env√≠o gratis a nivel nacional
          </span>
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-4 md:mb-6 leading-tight">
            {title}
          </h1>
          {subtitle && (
            <p class="text-lg sm:text-xl md:text-2xl text-white/90 mb-8 md:mb-10 leading-relaxed">
              {subtitle}
            </p>
          )}
          {(primaryCta || secondaryCta) && (
            <div class="flex flex-col sm:flex-row gap-4">
              {primaryCta && (
                <a 
                  href={primaryCta.href}
                  class="inline-flex items-center justify-center gap-2 bg-accent-cyan hover:bg-accent-cyan-vivid text-dark-slate font-bold px-8 py-4 rounded-full text-lg transition-all hover:scale-105 hover:shadow-lg"
                >
                  {primaryCta.text}
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              )}
              {secondaryCta && (
                <a 
                  href={secondaryCta.href}
                  class="inline-flex items-center justify-center gap-2 bg-white/10 hover:bg-white/20 text-white font-semibold px-8 py-4 rounded-full text-lg transition-all border-2 border-white/30 hover:border-white/50"
                >
                  {secondaryCta.text}
                </a>
              )}
            </div>
          )}
        </div>
      )}
    </div>
  </div>
  
  <!-- Decorative elements for hero -->
  {isHero && (
    <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-white to-transparent"></div>
  )}
</section>
