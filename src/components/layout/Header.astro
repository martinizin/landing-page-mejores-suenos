---
/**
 * Header Component
 * Professional ecommerce-style navigation
 * Inspired by Chaide.com: white background, prominent logo, clean navigation
 */
import { BRAND } from '../../lib/config/brand';

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navLinks = [
  { href: '/', label: 'Inicio' },
  { href: '/colchones', label: 'Colchones' },
  { href: '/almohadas', label: 'Almohadas' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<!-- Top bar with contact info -->


<!-- Main Header -->
<header class="bg-white sticky top-0 z-50 shadow-md">
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo + Brand Name -->
      <a href="/" class="flex items-center gap-3 hover:opacity-90 transition-opacity flex-shrink-0">
        <img 
          src={BRAND.logo} 
          alt={BRAND.name}
          class="h-12 md:h-14 w-auto"
          width="56"
          height="56"
        />
        <div class="hidden sm:block">
          <span class="text-primary-navy font-bold text-lg md:text-xl leading-tight block">
            LOS MEJORES
          </span>
          <span class="text-primary-blue font-bold text-lg md:text-xl leading-tight block">
            SUEÑOS
          </span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          <li>
            <a 
              href={link.href}
              class:list={[
                'px-5 py-2 rounded-full text-base font-medium transition-all',
                isActive(link.href) 
                  ? 'bg-primary-blue text-white' 
                  : 'text-dark-slate hover:bg-gray-100 hover:text-primary-blue'
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- CTA Button (Desktop) -->
      <a 
        href={`https://wa.me/${BRAND.whatsapp.number}`}
        target="_blank"
        rel="noopener noreferrer"
        class="hidden lg:flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white font-semibold px-5 py-2.5 rounded-full transition-colors"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        WhatsApp
      </a>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2 hover:bg-gray-100 rounded-lg transition-colors text-dark-slate"
        aria-label="Abrir menú"
        aria-expanded="false"
      >
        <svg class="w-6 h-6 menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg class="w-6 h-6 close-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-gray-100">
      <ul class="flex flex-col gap-1 pt-4">
        {navLinks.map(link => (
          <li>
            <a 
              href={link.href}
              class:list={[
                'block px-4 py-3 rounded-lg transition-colors text-base font-medium',
                isActive(link.href) 
                  ? 'bg-primary-blue text-white' 
                  : 'text-dark-slate hover:bg-gray-100'
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li class="mt-2 pt-2 border-t border-gray-100">
          <a 
            href={`https://wa.me/${BRAND.whatsapp.number}`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-2 bg-green-500 text-white font-semibold px-4 py-3 rounded-lg"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Contáctanos por WhatsApp
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = menuBtn?.querySelector('.menu-icon');
  const closeIcon = menuBtn?.querySelector('.close-icon');

  menuBtn?.addEventListener('click', () => {
    const isOpen = !mobileMenu?.classList.contains('hidden');
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
    menuBtn.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
