---
/**
 * Footer Component
 * Professional ecommerce-style footer
 */
import { BRAND } from '../../lib/config/brand';
import { buildWhatsAppLink } from '../../lib/utils/whatsapp';

const currentYear = new Date().getFullYear();
const whatsappLink = buildWhatsAppLink();
---

<footer class="bg-dark-slate text-white">
  <!-- Main Footer -->
  <div class="container mx-auto px-4 py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-4">
          <img 
            src={BRAND.logo} 
            alt={BRAND.name}
            class="h-14 w-auto"
            width="56"
            height="56"
          />
          <div>
            <span class="font-bold text-lg text-white block">LOS MEJORES</span>
            <span class="font-bold text-lg text-accent-cyan block">SUEÑOS</span>
          </div>
        </a>
        <p class="text-gray-light/80 text-sm leading-relaxed mb-4">
          {BRAND.tagline}. Tu descanso es nuestra prioridad.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-bold mb-5">Navegación</h4>
        <ul class="space-y-3">
          <li>
            <a href="/" class="text-gray-light hover:text-accent-cyan transition-colors flex items-center gap-2 group">
              <svg class="w-4 h-4 opacity-0 -ml-6 group-hover:opacity-100 group-hover:ml-0 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              Inicio
            </a>
          </li>
          <li>
            <a href="/colchones" class="text-gray-light hover:text-accent-cyan transition-colors flex items-center gap-2 group">
              <svg class="w-4 h-4 opacity-0 -ml-6 group-hover:opacity-100 group-hover:ml-0 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              Colchones
            </a>
          </li>
          <li>
            <a href="/almohadas" class="text-gray-light hover:text-accent-cyan transition-colors flex items-center gap-2 group">
              <svg class="w-4 h-4 opacity-0 -ml-6 group-hover:opacity-100 group-hover:ml-0 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              Almohadas
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-lg font-bold mb-5">Contacto</h4>
        <ul class="space-y-4">
          <li>
            <a 
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 text-gray-light hover:text-accent-cyan transition-colors"
            >
              <div class="w-10 h-10 bg-green-600 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <span>WhatsApp</span>
            </a>
          </li>
          <li class="text-gray-light/70 text-sm">
            <p class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Lun - Vie: 9:00 - 18:00
            </p>
          </li>
        </ul>
      </div>

      <!-- Benefits Reminder -->
      <div>
        <h4 class="text-lg font-bold mb-5">Beneficios</h4>
        <ul class="space-y-3">
          <li class="flex items-center gap-3 text-gray-light text-sm">
            <svg class="w-5 h-5 text-accent-cyan flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Envío gratis a nivel nacional
          </li>
          <li class="flex items-center gap-3 text-gray-light text-sm">
            <svg class="w-5 h-5 text-accent-cyan flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Garantía de fábrica
          </li>
          <li class="flex items-center gap-3 text-gray-light text-sm">
            <svg class="w-5 h-5 text-accent-cyan flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Atención personalizada
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Copyright -->
  <div class="border-t border-white/10">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-center md:text-left">
        <p class="text-gray-light/60 text-sm">
          &copy; {currentYear} {BRAND.name}. Todos los derechos reservados.
        </p>
        <p class="text-gray-light/60 text-sm">
          {BRAND.texts.shippingIncluded}
        </p>
      </div>
    </div>
  </div>
</footer>
