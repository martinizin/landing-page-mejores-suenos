---
/**
 * Badge Component
 * Small label for categories or tags
 */
interface Props {
  variant?: 'default' | 'accent';
  size?: 'sm' | 'md';
}

const { 
  variant = 'default',
  size = 'sm',
} = Astro.props;

const baseClasses = 'inline-flex items-center font-medium rounded-full';

const variantClasses = {
  default: 'bg-gray-light text-dark-slate',
  accent: 'bg-accent-cyan text-dark-slate',
};

const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-3 py-1 text-sm',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]}`;
---

<span class={classes}>
  <slot />
</span>
